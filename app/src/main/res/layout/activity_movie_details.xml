<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.yassermuhamed.moviesapp.MovieDetailsActivity">

    <TextView
        android:padding="36dp"
        android:background="#009688"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:id="@+id/original_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Movie Name" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:id="@+id/poster_view_movie"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="22sp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="16dp"
                    android:id="@+id/release_date"
                    android:hint="11 / 5 / 2017"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="22sp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/runtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="120min" />
                <TextView
                    android:textSize="22sp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="8/10" />

                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="32dp"
                    android:src="@drawable/ic_star_rate_white_18dp"
                    android:id="@+id/favorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:textSize="22sp"
        android:id="@+id/overview"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:hint="this is details about your lovely movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/trailer"
        android:text="Trailers:"
        android:padding="12dp"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

  <ListView
      android:id="@+id/listView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>
</LinearLayout>
    
</ScrollView>
